Agent.controller('NewAppoCtrl', ['$scope', '$http', 'Upload', function($scope, $http, Upload, $state){

  var url = "<%= ENV['URL'] %>" || "http://localhost:3000/api/";

  $scope.appointment = {};
  $scope.form = {};

  $scope.form.create = function(){
    $http({
      url: url + 'appointments',
      method: 'POST',
      data: $scope.appointment
    }).then(function(resp){
      $scope.appointment = ''
    }, function(resp) {
      console.log(resp);
    })
  };
}]);