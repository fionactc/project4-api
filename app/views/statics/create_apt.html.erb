<div class="container">
  <div class="row">
    <h1>Create A New appointment</h1>

    <form ng-submit="form.create()" ng-controller="NewAppoCtrl" ng-app="AgentApp">
      <div class="form-group">
        <label>Title</label>
        <input type="date" class="form-control" placeholder="Enter appointment start date" ng-model="appointment.start_date">
      </div>

      <div class="form-group">
        <label>Content</label>
        <input type="date" class="form-control" placeholder="Enter end date" ng-model="appointment.end_date">
      </div>

      <div class="form-group">
        <label>Category</label>
        <input type="time" class="form-control" placeholder="Enter start_time" ng-model="appointment.start_time">
      </div>

      <div class="form-group">
        <label>Category</label>
        <input type="time" class="form-control" placeholder="Enter end_time" ng-model="appointment.end_time">
      </div>

      <button type="submit" class="btn btn-default">Submit</button>
    </form>
  </div>
</div>