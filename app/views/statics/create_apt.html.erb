<div class="container">
  <div class="row">
    <h1>Create A New Apartment</h1>

    <form ng-submit="form.create()" ng-controller="NewAptCtrl" ng-app="AgentApp">
      <div class="form-group">
        <label>Title</label>
        <input type="text" class="form-control" placeholder="Enter apartment name" ng-model="apartment.apt_name">
      </div>

      <div class="form-group">
        <label>Content</label>
        <input type="text" class="form-control" placeholder="Enter street" ng-model="apartment.street">
      </div>

      <div class="form-group">
        <label>Category</label>
        <input type="text" class="form-control" placeholder="Enter area" ng-model="apartment.area">
      </div>

      <div class="form-group">
        <label>Category</label>
        <input type="text" class="form-control" placeholder="Enter price" ng-model="apartment.price">
      </div>

      <div class="form-group">
        <label>Category</label>
        <input type="text" class="form-control" placeholder="Enter bedroom_num" ng-model="apartment.bedroom_num">
      </div>

      <div class="form-group">
        <label>Category</label>
        <input type="text" class="form-control" placeholder="Enter bathroom_num" ng-model="apartment.bathroom_num">
      </div>

      <!-- File upload button -->
      <div class="button" ngf-select ng-model="apartment_picture.picture" ngf-multiple="true">Select File</div>

       <!-- Image / file preview -->
      <img ngf-src="apartment_picture.picture" width="200" height="200">

      <button type="submit" class="btn btn-default">Submit</button>
    </form>
  </div>
</div>