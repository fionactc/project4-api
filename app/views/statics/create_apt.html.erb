<div class="container">
  <div class="row">
    <h1>Create A New apartment</h1>

    <form ng-submit="form.create()" ng-controller="NewRateCtrl" ng-app="AgentApp">
      <div class="form-group">
        <label>Title</label>
        <input type="text" class="form-control" placeholder="Enter apartment name" ng-model="apartment.apt_name">
      </div>

      <!-- File upload button -->
      <div class="button btn btn-default" ngf-select ng-model="apartment_pictures.pictures" ngf-multiple="true">Select</div>

      <!-- Image / file preview -->
      <img ng-repeat="picture in apartment_pictures.pictures" ngf-src="picture" width="200" height="200">

      <button type="submit" class="btn btn-default">Submit</button>
    </form>
  </div>
</div>